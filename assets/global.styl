@import 'variables'

@font-face
	font-family 'Gnuolane'
	src local('Gnuolane')
		, url('~/assets/gnuolane.woff2')
		format('woff2')

@font-face
	font-family 'Hack'
	src local('Hack')
		, url('~/assets/hack.woff2')
		format('woff2')

html
	-moz-osx-font-smoothing grayscale
	-ms-text-size-adjust 100%
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	box-sizing border-box
	color brand-grey
	font-family 'Gnuolane', sans-serif
	height 100%

*
, *:before
, *:after
	box-sizing border-box
	margin 0

body
	height 100%

a
	color: brand-orange
	&:focus
		outline: 1px dashed brand-orange

code
	font-family 'Hack', monospace

.button
	border 1px solid brand-orange
	padding 2mm
	text-decoration none
	&:hover
		background-color brand-orange
		color white
